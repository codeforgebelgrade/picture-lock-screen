<Window x:Class="PictureLockScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PictureLockScreen"
        mc:Ignorable="d"
        Title="PictureLockScreen" Height="350" Width="525" WindowState="Maximized">
    <Grid>
        <Image x:Name="image" Margin="40,10,40,150"/>
        <TextBox Margin="40,0,40,80" TextWrapping="Wrap" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Width="437" FontSize="20" FontWeight="Bold"/>
        <Button Content="Let me in!" Margin="184,0,183,32" HorizontalAlignment="Stretch" Width="150" Height="41" VerticalAlignment="Bottom" Padding="1"/>

    </Grid>
</Window>
